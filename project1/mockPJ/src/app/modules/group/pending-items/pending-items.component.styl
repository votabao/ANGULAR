.pending-users, .content-detail
  position relative
  box-shadow 1px 1px 10px 1px gray

.pending-user-button
  position absolute
  top 50%
  right 0
  transform translateY(-50%)

.nav-tabs
  background-color #D7D7D7
  border none

.nav-link
  color black

.main-left-content
  position relative
  width 225px
  height 225px

.content
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.5)
//quancss
.pending-user-avatar
  flex-basis 12%


span.view-all
  bottom 10px
  right 30px
  position absolute
  cursor pointer
  color #5287C8
