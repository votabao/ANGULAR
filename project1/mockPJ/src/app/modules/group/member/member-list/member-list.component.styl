.member-avatar
  overflow hidden

.member-detail
  position relative

.dropdown
  font-size 1.5rem
  position absolute
  top 5%
  right 5%

.dropdown-item
  cursor pointer

.dropdown-toggle::after
  display none

img
  transition all .3s

.member-avatar:hover img
  transform scale(1.3)

.captain
   color #FFD08A

.member-list
  box-shadow 1px 1px 10px 1px gray

.toggle-button
   background-color transparent
   border none
